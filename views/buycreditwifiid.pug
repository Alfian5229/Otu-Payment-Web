// -----------------------------------section3 starts-----------------------
section.form-section3.commonclass.mb-5
    .container
        .row
            .col-lg-12
                .form-sec.commonclass
                    h4.text-capitalize Wifi ID
                    form
                        .form-group.position-relative
                            label.fs20.text-capitalize nomor HP
                            input.form-control#telephone-no(type='text', value='', ng-focus="inputDataWifiId()" placeholder='Contoh: 081234567890' ng-change="inputDataWifiId()" ng-model="no_pelanggan")
                    .form-group
                        label.fs20.text-capitalize#labelJudulNominal(style='visibility: hidden;') nominal wifi iD
                        .row
                            .col-lg-3.col-md-4.col-sm-6#cbcontent(style="margin-top: 25px;" ng-repeat="prefix in prefixes")
                                label
                                    | {{ prefix.name }}
                                    span(style="display: block;") Point : {{ prefix.ep }}
                                    input.trans-list(type='checkbox', name='scales', ng-model="prefix.checked" ng-click="updateSelection($index, prefixes)")
                                    span.checkmark
                    label.fs20.text-capitalize#label-harga(style='visibility: hidden;') harga
                    .row.pt-2
                        .col-md-6
                            h5.text-capitalize.font-bold#harga(style='visibility: hidden;') rp {{ harga }}
                            span.text-capitalize#nominal(style='visibility: hidden;') {{ nominal }}
                        .col-md-6
                            button.btn.btn-default.green-btn.float-right.text-uppercase(type='button' id='btn-beli' ng-disabled="!btnBeliWifiId" data-toggle="modal" data-target="#modalKonfirmasi" data-backdrop="static" data-keyboard="false") beli
                    .alert.alert-success.success-msg.position-relative(role='alert')
                        i.position-absolute.fa.fa-info(aria-hidden='true')
                        p
                            | pastikan data yang Anda masukan sudah benar.
// form-sec ends
// -----------------------------------section3 ends-----------------------
// -----------------------------modal konfirmasi starts-------------------
.modal.fade#modalKonfirmasi
    .modal-dialog.modal-lg.modal-dialog-centered
        .modal-content
            // Modal Header
            .modal-header(style="border-bottom: 0px; padding-bottom: 0px")
                h4.modal-title(style="color: #009933") Konfirmasi Pembayaran
            // Modal body
            .modal-body
                hr(style="margin-top: 0rem")
                .row
                    .col-8.my-auto
                        h5 Nomor Handphone
                        br
                        h6(style="margin-bottom: 10px") {{ no_pelanggan }}
                        h6.text-capitalize {{ nominal }}
                    .col-4.my-auto(style="text-align: right;")
                        img.img-fluid(src="/images/icon_produk/Produk_10.png")
                hr
                h5 Detail
                br
                .row
                    .col-8
                        h6.text-capitalize(style="margin-bottom: 10px") harga voucher
                        h6.text-capitalize Biaya transaksi
                    .col-4(style="text-align: right;")
                        h6.text-capitalize(style="margin-bottom: 10px") rp {{ harga }}
                        h6.text-capitalize Rp 0
                hr
                .row
                    .col-8
                        h5.text-capitalize total
                    .col-4(style="text-align: right;")
                        h5.text-capitalize(style="color: #009933") rp {{ harga }}
            // Modal footer
            .modal-footer(style="border-top: 0px")
                button.btn.btn-secondary(type='button', data-dismiss='modal') BATALKAN
                button.btn.btn-success#btKonfirmasi(ng-click="tampilModalAlert()", type='button', data-dismiss='modal') YA, LANJUTKAN
// -----------------------------modal konfirmasi ends---------------------
