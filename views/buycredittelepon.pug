                                //-     button.close(type='button', data-dismiss='alert', aria-label='Close')
                                //-         span(aria-hidden='true') Ã—
                            //- p {{ provider }}
                    h5.mt-5(ng-show="datakosong" style="text-align: center; color: #4d4d4d;") Tidak Ada Produk
                    #hideData(style='visibility: hidden;')
                        form#myForm
                            .form-group
                                label.fs20.text-capitalize nominal telepon
                                .row
                                    .col-lg-4.col-md-6#cbcontent(style="margin-top: 25px;" ng-repeat="prefix in prefixes")
                                        label
                                            | {{ prefix.name }}
                                            span(style="display: block;") Point : {{ prefix.ep }}
                                            input.trans-list(type='checkbox', name='scales', ng-model="prefix.checked" ng-click="updateSelection($index, prefixes)")
                                            span.checkmark
                        label.fs20.text-capitalize#label-harga(style='visibility: hidden;') harga
                        .row.pt-2
                            .col-md-6
                                h5.text-capitalize.font-bold#harga(style='visibility: hidden;') rp {{ harga }}
                                span.text-capitalize#nominal {{ nominal }}
                            .col-md-6
                                button.btn.btn-default.green-btn.float-right.text-uppercase(type='button' id='btn-beli' ng-disabled="!btnBeli" data-toggle="modal" data-target="#modalKonfirmasi" data-backdrop="static" data-keyboard="false") beli
                        .alert.alert-success.success-msg.position-relative(role='alert')
                            i.position-absolute.fa.fa-info(aria-hidden='true')
                            p
                                | pastikan nomor handphone yang Anda masukan sudah benar.
