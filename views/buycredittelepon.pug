    .container
        .row
            .col-lg-12
                .form-sec.commonclass
                    h4.text-capitalize telepon
                    form
                        .form-group.position-relative
                            label.fs20.mb-2.text-capitalize nomor telepon
                            input.m-b-4.form-control#telephone-no(type='text', value='', placeholder='Contoh: 081234567890', ng-change="myFuncCredit2()", ng-model="myValue")
                            //- .alert.position-absolute.alert-dismissible.fade.show(role='alert')
