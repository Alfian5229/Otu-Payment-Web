// -----------------------------modal konfirmasi starts-------------------
.modal.fade#modalKonfirmasi
    .modal-dialog.modal-lg.modal-dialog-centered
        .modal-content
            // Modal Header
            .modal-header(style="border-bottom: 0px; padding-bottom: 0px")
                h4.modal-title(style="color: #009933") Konfirmasi Pembayaran
            // Modal body
            .modal-body
                hr(style="margin-top: 0rem")
                .row
                    .col-8.my-auto
                        h5 Nomor Handphone
                        br
                        h6(style="margin-bottom: 10px") {{ myValue }}
                        h6.text-capitalize {{ nominal }}
                    .col-4.my-auto(style="text-align: right;")
                        img.img-fluid#logoProvider
                hr
                h5 Detail
                br
                .row
                    .col-8
                        h6.text-capitalize(style="margin-bottom: 10px") harga voucher
                        h6.text-capitalize Biaya transaksi
                    .col-4(style="text-align: right;")
                        h6.text-capitalize(style="margin-bottom: 10px") rp {{ harga }}
                        h6.text-capitalize Rp 0
                hr
                .row
                    .col-8
                        h5.text-capitalize total
                    .col-4(style="text-align: right;")
                        h5.text-capitalize(style="color: #009933") rp {{ harga }}
            // Modal footer
            .modal-footer(style="border-top: 0px")
                button.btn.btn-secondary(type='button', data-dismiss='modal') BATALKAN
                button.btn.btn-success#btKonfirmasi(ng-click="tampilModalAlert()" type='button', data-dismiss='modal') YA, LANJUTKAN
// -----------------------------modal konfirmasi ends---------------------
